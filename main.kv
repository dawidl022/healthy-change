<SettingsScreen>:
    name: "settings"
    new_weight: new_weight
    new_height: new_height
    size_hint_y: 0.9
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            padding: [0, 10, 0, 0]
            size_hint_y: 0.3
            orientation: "vertical"
            BoxLayout:
                Label:
                    size_hint_x: 0.5
                    text: "Nowa waga (kg)"
                TextInput:
                    size_hint_x: 0.5
                    id: new_weight
            BoxLayout:
                Label:
                    size_hint_x: 0.5
                    text: "Nowy wzrost (cm)"
                TextInput:
                    size_hint_x: 0.5
                    id: new_height
            Button:
                text: "Zapisz Zmiany"
                on_release:
                    root.check_changes()
        BoxLayout:
            size_hint_y: 0.2
            Button:
                size_hint_y: None
                height: dp(80)
                text: "Zmień wyświetlane wartości odżywcze oraz wyświetl jak korzystać z aplikacji"
                on_release:
                    root.manager.current = "nutrients"
        BoxLayout:
            size_hint_y: 0.5
            orientation: "vertical"
            Label:
                text: "UWAGA!"
            Label:
                text: "Poniższy przycisk służy do wykasowania wszystkich danych wprowadzonych do aplikacji"
            Label:
                text: "Konieczne jest ponowne uruchomienie aplikacje po zresetowaniu."
                font_size: dp(12)
            Button:
                text: "Resetuj postępy i zazcznij od nowa"
                height: dp(60)
                pos_hint_y: 1
                size_hint_y: None
                background_color: (1, 0, 0, 1)
                on_release:
                    root.confirmation_box()
        BoxLayout:
            size_hint_y: 0.1
        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Powrót"
                on_release:
                    root.manager.current = "hub"
                    root.manager.transition.direction = "right"
                    root.clear_input()

