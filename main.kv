<MyRootBoxLayout>:
    day_label: day_label
    ScreenManager:
        Screen:
            name: "basic"
            Label:
                id: day_label
                text: ""
                size_hint_y: 0.1
                pos_hint: {"x": 0, "y": 0.89}
            Button:
                text: "Info"
                size_hint_x: 0.2
                size_hint_y: 0.08
                pos_hint: {"x": 0.75, "y": 0.9}
                on_release:
                    root.display_info()
    WindowManager:

<WindowManager>
    size_hint_x: 0.9
    size_hint_y: 0.96
    pos_hint: {"x": 0.05, "y": 0.04}
    InfoScreen:
    UserInfoScreen:
    GoalScreen:
    DietScreen:
    NutrientScreen:
    UserHub:
    SettingsScreen:
<InfoScreen>:
    name: "info"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Witaj w aplikacji coś tam coś tam\n\n"
            text_size: self.size
        Button:
            size_hint_x: 0.4
            size_hint_y: 0.08
            text: "Następny ekran"
            on_release:
                root.manager.current = "user_info"
                root.manager.transition.direction = "left"

<UserInfoScreen>:
    name: "user_info"
    _height: _height
    age: age
    mass: mass
    dropdown_button_wake: dropdown_button_wake
    dropdown_button_sleep: dropdown_button_sleep
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.9
        BoxLayout:
            size_hint_y: 0.8
            orientation: "vertical"
            BoxLayout:
                padding: 5
                size_hint_y: 0.1
            BoxLayout:
                padding: 5
                size_hint_y: 0.1
                Label:
                    size_hint_x: 0.25
                    text: "Wiek"
                TextInput:
                    id: age
                    size_hint_y: None
                    height: dp(40)
                    size_hint_x: 0.75
            BoxLayout:
                padding: 5
                size_hint_y: 0.1
                Label:
                    size_hint_x: 0.25
                    text: "Masa (kg)"
                TextInput:
                    id: mass
                    size_hint_y: None
                    height: dp(40)
                    size_hint_x: 0.75
            BoxLayout:
                padding: 5
                size_hint_y: 0.1
                Label:
                    size_hint_x: 0.25
                    text: "Wzrost (cm)"
                TextInput:
                    id: _height
                    size_hint_y: None
                    height: dp(40)
                    size_hint_x: 0.75
            BoxLayout:
                padding: 5
                size_hint_y: 0.05
            BoxLayout:
                padding: 5
                size_hint_y: 0.15
                Label:
                    text: "Płeć"
                BoxLayout:
                    orientation: "vertical"
                    CheckBox:
                        group: "sex"
                        on_active: root.male_check()
                    Label:
                        text: "Mężczyzna"
                BoxLayout:
                    orientation: "vertical"
                    CheckBox:
                        group: "sex"
                        on_active: root.female_check()
                    Label:
                        text: "Kobieta"
            BoxLayout:
                padding: 5
                size_hint_y: 0.05
            BoxLayout:
                size_hint_y: 0.2
                Image:
                    size_hint_x: 0.3
                    source: "grafika/Zegar.png"
                BoxLayout:
                    size_hint_x: 0.35
                    orientation: "vertical"
                    Label:
                        text: "Wstajesz:"
                    Label:
                        text: "Kładziesz się spać: "
                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.35
                    Button:
                        id: dropdown_button_wake
                        text: "Wybór godziny"
                        on_release: root.open_wake_time(self)
                    Button:
                        id: dropdown_button_sleep
                        text: "Wybór godziny"
                        on_release: root.open_bed_time(self)
        BoxLayout:
            size_hint_y: 0.3
            Button:
                size_hint_x: 0.4
                size_hint_y: None
                height: dp(60)
                text: "Następny ekran"
                on_release:
                    if root.check_details(): root.manager.current = "goal_screen"
                    root.manager.transition.direction = "left"

        BoxLayout:
            size_hint_y: 0.1
            Button:
                size_hint_y: None
                height: dp(40)
                text: "Poprzedni ekran"
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "info"


<GoalScreen>
    name: "goal_screen"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            size_hint_y: 0.9
            rows: 2
            Label:
                text: "Na początek, wybierz swój cel"
            GridLayout:
                rows: 3
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        background_normal: "grafika/test.png"
                        text: "Chcę nabrać wagę"
                        on_release:
                            root.chose_goal("max")
                            root.manager.current = "diet_screen"
                            root.manager.transition.direction = "left"
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        background_normal: "grafika/test.png"
                        text: "Chcę utrzymać swoją wagę\n ale lepiej się czuć"
                        on_release:
                            root.chose_goal("stay")
                            root.manager.current = "diet_screen"
                            root.manager.transition.direction = "left"
                BoxLayout:
                    orientation: "horizontal"
                    Button:
                        size_hint_x: 0.6
                        background_normal: "grafika/test.png"
                        text: "Chcę zrzucić wagę"
                        on_release:
                            root.chose_goal("min")
                            root.manager.current = "diet_screen"
                            root.manager.transition.direction = "left"
                    ClickableImage:
                        size_hint_x: 0.4
                        source: "grafika/Stopy waga.png"
                        on_release:
                            root.chose_goal("min")
                            root.manager.current = "diet_screen"
                            root.manager.transition.direction = "left"
        BoxLayout:
            size_hint_y: 0.1
            Button:
                size_hint_y: None
                height: dp(40)
                text: "Poprzedni ekran"
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "user_info"
<DietScreen>
    name: "diet_screen"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            size_hint_y: 0.9
            rows: 3
            padding: 10
            Label:
                text_size: self.size
                text: "Teraz wybierz jedną spośród poniższych diet, jakiej chcesz się trzymać\n\n"
            BoxLayout:
                padding: dp(5)
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        background_normal: "grafika/test.png"
                        text: "Dieta Wegańska"
                        on_release:
                            root.chose_diet("vegan")
                            root.manager.transition.direction = "left"
                            root.manager.current = "nutrients"
                    Button:
                        size_hint_y: 0.5
                        text: "Czytaj więcej o tej diecie"
                        on_release:
                            root.read_vegan()
                ClickableImage:
                    source: "grafika/Dieta Weganska.png"
                    on_release:
                        root.chose_diet("vegan")
                        root.manager.transition.direction = "left"
                        root.manager.current = "nutrients"
            BoxLayout:
                padding: dp(5)
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        background_normal: "grafika/test.png"
                        text: "Bez szczególnego typu/ograniczen"
                        on_release:
                            root.chose_diet("all_allowed")
                            root.manager.transition.direction = "left"
                            root.manager.current = "nutrients"
                    Button:
                        size_hint_y: 0.5
                        text: "Czytaj więcej o tej diecie"
                ClickableImage:
                    source: "grafika/Dieta bez ograniczen.png"
                    on_release:
                        root.chose_diet("all_allowed")
                        root.manager.transition.direction = "left"
                        root.manager.current = "nutrients"
        BoxLayout:
            size_hint_y: 0.1
            Button:
                size_hint_y: None
                height: dp(40)
                text: "Poprzedni ekran"
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "goal_screen"

<NutrientScreen>:
    name: "nutrients"
    size_hint_y: 0.9
    BoxLayout:
        orientation: "vertical"
        NutrientSelector
        Button:
            size_hint_y: None
            height: dp(60)
            text: "Zaczynamy!"
            on_release:
                root.manager.current = "hub"
                root.display_info()
                root.manager.transition.direction = "left"

<UserHub>:
    name: "hub"
    bmi_button: bmi_button
    activities: activities
    status: status
    water_status: water_status
    BoxLayout:
        size_hint_y: 0.9
        orientation: "vertical"
        spacing: 10
        GridLayout:
            size_hint_y: 0.26
            rows: 3
            GridLayout:
#                size_hint_y: 0.2
                cols: 2
                BmiButton:
                    id: bmi_button
                    size_hint_y: None
                    height: dp(40)
                    text: "BMI:"
                Button:
                    size_hint_y: None
                    height: dp(40)
                    text: "Zakutalizuj wagę / wzrost i ustawienia" # If doesn't fit rename to "Ustawienia"
                    on_release:
                        root.manager.current = "settings"
                        root.manager.transition.direction = "left"
            GridLayout:
#                size_hint_y: 0.2
                cols: 2
                VisualButton:
                    id: status
                    size_hint_y: None
                    height: dp(40)
                    text: "Bilans Kaloryczny: 0kcal"
                VisualButton:
                    id: water_status
                    size_hint_y: None
                    height: dp(40)
            BoxLayout:
                Button:
                    text: "Pełne statystyki dnia"
                Button:
                    text: "Sprawdź produkt"
                    on_release: root.meal_search()
        RecycleView:
            size_hint_y: 0.7
            viewclass: 'Label'
            id: activities

            data: [{"text": "Nic nie dodano jescze dzisiaj."}]

            RecycleBoxLayout:
                default_size: None, dp(20)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
        Button:
            text: "Dodaj Czynność"
            size_hint_y: 0.1
            on_release: root.home_activity_display()

<Button>:
    text_size: self.width, None
    halign: "center"
<Label>:
    text_size: self.width, None
    halign: "center"

<CustomLabel@Label>

<MealScreen>:
    orientation: "vertical"
    food_item: food_item_search
    search_results: search_results_list
    search_button: search_button
    Label:
        size_hint_y: None
        height: dp(40)
        font_size: dp(12)
        text: "Wyszukaj produkt: <Ilość> <jednostka miary n.p 'miska', 'g'> <Nazwa dania, potrawy>"
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        TextInput:
            id: food_item_search
            multiline: False
            size_hint_x: 70
        Button
            id: search_button
            text: "Szukaj"
            size_hint_x: 30
            on_press: self.text = "Przetwarzam.."
            on_release:
                root.meal_search()
                self.text = "Szukaj"
    BoxLayout:
        orientation: "vertical"
        RecycleView:
            size_hint_y: 0.9
            viewclass: 'FoodButton'
            id: search_results_list

            data: []

            RecycleBoxLayout:
                default_size: None, dp(20)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        Image:
            size_hint_y: 0.1
            source: 'grafika/badge.png'
            size: self.texture_size
        AddButton:
            size_hint_y:0.1
            text: "Dodaj Produkt"
            on_release:
                root.add_food_to_user()
                self.disabled = True

<WorkoutRecycleView>
    workout_list: workout_type_list
    RecycleView:
        viewclass: 'ActivityButton'
        id: workout_type_list

        data: []

        RecycleBoxLayout:
            default_size: None, dp(50)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

